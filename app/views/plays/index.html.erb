<div class="col-md-10 col-md-offset-1">
	<h1 class="current-category"><%= params[:category] %></h1>
	<% if @plays.count == 0 %>
			<h3>This are no plays in this category.</h3>
		<% else %>
			<% @plays.each do |play| %>
				<h2><%= link_to play.title, play_path(play) %></h2>
			<% end %>
	<% end %>
	<%= link_to "Add play", new_play_path, class: "btn btn-primary" %>
</div>