<div class="review">
	<div class="review-rating" data-score="<%= review.rating %>"></div>
	<p class="review-comment"><%= review.comment %></p>

	<div class='links btn-group text-right'>
	<% if user_signed_in? %>
		<% if current_user.id == review.user_id %>	
			<%= link_to "Edit", edit_play_review_path(review.play, review), class: "btn btn-primary btn-xs" %>
			<%= link_to "Destroy", play_review_path(review.play, review), method: :delete, data: {confirm: "Are You sure?"}, class: "btn btn-danger btn-xs" %>
		<% end %>
	<% end %>
	</div>
</div>
	
		
